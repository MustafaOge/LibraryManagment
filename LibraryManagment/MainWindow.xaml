<Window x:Class="LibraryManagment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagment"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Focusable="True" ScrollViewer.CanContentScroll="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Logo and button-->
        <Border Background="#2596be" Grid.Row="0" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Border Grid.Row="0">
                    <DockPanel>
                        <Image Source="/images/icon/libraryIcon.png" Width="25" Height="25" />
                        <Label Content="KÜTÜPHANE PROGRAMI" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                    </DockPanel>
                </Border>

                <Border Grid.Row="1">
                    <DockPanel>
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="/images/icon/documentAddIcon.png"/>
                                    <Setter Property="Height" Value="auto" />
                                    <Setter Property="Width" Value="100"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Source" Value="/images/icon/documentAddIconWhite.png"/>
                                            <Setter Property="Width" Value="105"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
        <Border Background="#FFFFFFFF" Grid.Column="1" Grid.Row="0">
        </Border>

        <!--Mini buttons and title-->
        <Border Background="#2596be" Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />

                    <RowDefinition/>

                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="White">
                    <DockPanel Width="72" HorizontalAlignment="Right">
                        <Button Content="_"  Style="{DynamicResource mini-buttons}" />
                        <Button Content="X" x:Name="btn_close" Click="btn_close_Click" Style="{DynamicResource mini-buttons}"/>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>

        <!--Sidebar-->
        <Border Background="#2596be" Grid.Row="1" Grid.Column="0">
        </Border>

    </Grid>
</Window>
